<!DOCTYPE html>
<html>
  <head>
    <title>SquarePayment</title>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <script type="text/javascript">
      window.applicationId = '<%=Rails.application.secrets.square_application_id %>';
      window.locationId = '<%=Rails.application.secrets.square_location_id %>';
    </script>
    <% if ENV['IS_PRODUCTION'] == 'true' %>
      <%= javascript_include_tag 'application', 'https://js.squareup.com/v2/paymentform', 'data-turbolinks-track' => true%>
    <% else %>
      <%= javascript_include_tag 'application', 'https://js.squareupsandbox.com/v2/paymentform', 'data-turbolinks-track' => true%>
    <% end %>
    <%= stylesheet_link_tag 'application', 'sq-payment-form', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'sq-payment-form', 'data-turbolinks-track' => 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-primary">
      <span class="navbar-brand mb-0 h1 text-center text-white" style="width: 100%">SQUARE PAYMENT</span>
    </nav>

    <div class='container-fluid'>
      <!-- As a heading -->
      <%= yield %>  
    </div>
    
  </body>
</html>
