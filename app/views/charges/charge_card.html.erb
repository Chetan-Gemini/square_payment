<div class="row">
  <%= link_to "Go To Payment Page", root_path, class: 'link m-b-4'  %>
  <div class="col-sm">
    <% if @payment %>
      <table class="table">
        <tr>
          <td>Payment ID</td>
          <td><%= @payment[:id] %></td>
        </tr>
        <tr>
          <td>Amount</td>
          <td><%= number_to_currency (@payment[:amount_money][:amount] / 100.0) %></td>
        </tr>
        <tr>
          <td>Status</td>
          <td><%= @payment[:status] %></td>
        </tr>
        <tr>
          <td>Card Details</td>
          <td>
            <%= @payment[:card_details][:card][:card_brand] %>
            <br>
            <%= "**** **** **** #{@payment[:card_details][:card][:last_4]}" %>
          </td>
        </tr>

      </table>
    <% else %>  
      <table class="table bg-danger">
        <% @error[0].each do |k, v|%>
          <tr>
            <td><%= k %></td>
            <td><%= v %></td>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>
